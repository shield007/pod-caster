<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="PodCaster" location="applications"/>
  <shortcut
    name="PodCaster Documentation (HTML)"    
    target="$INSTALL_PATH\docs\html\index.html"       
    description="The command line documentation in HTML format"        
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">    
  </shortcut>
  
  <shortcut
    name="PodCaster Documentation (PDF)"    
    target="$INSTALL_PATH\docs\pdf\userguide.pdf"       
    description="The command line documentation in HTML format"        
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no">    
  </shortcut>
  
  <shortcut
     name="PodCaster Uninstall"     
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\bin\podcaster-java.bat"
     commandLine="-jar &quot;$INSTALL_PATH\uninstaller\uninstall.jar&quot;"          
     type="Application"
     description="Uninstaller">
   </shortcut> 
</shortcuts>